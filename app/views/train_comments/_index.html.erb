<table>
  <tbody>
    <% train.train_comments.each do |train_comment| %>
    <tr>
      <td>
        <%= link_to user_path(train_comment.user) do %>
          <%= image_tag train_comment.user.get_profile_image, size: "75x75" %><br>
          <%= train_comment.user.name %>
        <% end %>
      </td>
      <td><%= train_comment.comment %></td>
      <td>
        <% if train_comment.user == current_user %>
          <%= link_to "Destroy", train_train_comment_path(train, train_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>