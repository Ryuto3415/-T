<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>👤ユーザー情報</h2>
      <%= render 'info', user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>👤ユーザー一覧</h2>
      <div class="row">
        <!-- ここで .col-md-4 のカードを複数並べる -->
        <%= render 'index', users: @users %>
      </div>
    </div>
  </div>
</div>
