<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>ユーザー情報</h2>
    <%= form_with model: Train.new, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class:'form-control train_title' %>
      </div>
     <div class="form-group">
        <%= f.label :image, "画像" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :opinion, "本文" %>
        <%= f.text_area :body, class:"form-control train_body" %>
      </div>
      <div class="form-group">
        <%= f.submit "投稿", class:'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
