<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>本文</th>
      <th>投稿日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% trains.each do |train| %>
      <tr>
        <td>
          <%= image_tag train.image_url, size: '50x50' %>
        </td>
        <td><%= link_to train.title,train %></td>
        <td><%= train.body %></td>
        <td><%= train.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
        <td id="favorite_btn_<%= train.id %>">
           <%= render "favorites/btn", train: train %>
        </td>
        <td>コメント数： <%= train.train_comments.count %></td>
        <!--<td>閲覧数:  @train.view_count </td>-->
      </tr>
    <% end %>
  </tbody>
</table>
