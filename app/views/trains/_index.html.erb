<div class="row">
  <% trains.each do |train| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-header d-flex align-items-center">
          <%= image_tag 'no_image.jpg', size: '40x40', class: 'rounded-circle me-2' %>
          <div>
            <strong><%= train.user.name %></strong><br>
            <small class="text-muted"><%= train.created_at.strftime("%Yå¹´%mæœˆ%dæ—¥ %H:%M") %></small>
          </div>
        </div>

        <% if train.image_url.present? %>
          <%= image_tag train.image_url, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= link_to train.title, train %></h5>
          <p class="card-text"><%= truncate(train.body, length: 10, omission: '...') %></p>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
          <div id="favorite_btn_<%= train.id %>">
            <%= render "favorites/btn", train: train %>
          </div>
          <div>
            ðŸ’¬ <%= train.train_comments.count %>
          </div>
          <div>
            <i class="fas fa-eye"></i> <%= train.impressionist_count %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>